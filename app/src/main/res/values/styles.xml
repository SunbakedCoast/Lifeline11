<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- CardViewFeed theme. -->
    <style name="CardView.Lifeline.Feed" parent="CardView.Light">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="Heading.Card.Lifeline.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body.Card.Lifeline.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/black</item>
    </style>





    <style name="Widget.Lifeline.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Lifeline.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="boxStrokeColor">@color/blue</item>
    </style>


    <style name="TextAppearance.Lifeline.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Button.Lifeline" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="cornerRadius">5dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>


</resources>
