<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/auth_fragment_register_progressbar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:visibility="gone"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:layout_gravity="start"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/title_register"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        style="@style/EditTextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/auth_fragment_register_input_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/hint_first_name"
            android:inputType="textPersonName"
            android:textSize="14sp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        style="@style/EditTextInputLayoutStyle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/auth_fragment_register_input_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/hint_last_name"
            android:inputType="textPersonName"
            android:textSize="14sp"/>

    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            style="@style/EditTextInputLayoutStyle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/auth_fragment_register_input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:passwordToggleEnabled="true"
            style="@style/EditTextInputLayoutStyle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/auth_fragment_register_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:textSize="14sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/auth_fragment_register_spinner_gender"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="start" />

        <CheckBox
            android:id="@+id/auth_fragment_register_checkbox_termsxconditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="5dp"
            android:layout_gravity="start"
            android:text="@string/text_terms_x_conditions"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/auth_fragment_register_btn_termsxconditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:text="@string/text_btn_terms_x_conditions"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/auth_fragment_register_btn_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:text="@string/btn_policy"/>


        <ImageView
            android:id="@+id/auth_fragment_register_registerbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_registerbtn"
            android:layout_gravity="center" />




    </LinearLayout>
</ScrollView>